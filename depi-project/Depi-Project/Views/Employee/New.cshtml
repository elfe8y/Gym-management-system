@{
    SelectList deptList = new SelectList(ViewBag.Depts, "Department_Id", "Department_Name");
}

@model Employee

<h1>Add new Employee</h1>
<form method="post" action="/Employee/New">
    <div>
    <label asp-for="Name">Employee Name</label>
    <input asp-for="Name" class="form form-control"/>
    </div>

    <div>
        <label asp-for="Age"> Age</label>
        <input asp-for="Age" class="form form-control" />
    </div>
    <div>
        <label asp-for="PhoneNumber">PhoneNumber</label>
        <input asp-for="PhoneNumber" class="form form-control" />
    </div>
    <div>
        <label asp-for="Address">Address</label>
        <input asp-for="Address" class="form form-control" />
    </div>
    <div>
        <label asp-for="OverTime">OverTime</label>
        <input asp-for="OverTime" class="form form-control" />
    </div>
    <div>
        <label asp-for="Salary">Salary</label>
        <input asp-for="Salary" class="form form-control" />
    </div>

    <div>
        <label asp-for="Department_Id">Department Name</label>
    <select asp-for="Department_Id" asp-items="deptList" class="form-control">
        
    </select>
    </div>

    <input type="submit" value="Create" class="btn btn-success" />

</form>

