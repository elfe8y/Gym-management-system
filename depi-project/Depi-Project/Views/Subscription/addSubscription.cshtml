@model Subscription



<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card p-4 shadow-lg rounded" style="border-radius: 12px; background-color: #f9f9f9; border: none;">
                <div class="card-body text-center">
                    <h3 class="card-title" style="font-weight: 600; color: #2c3e50;">@ViewData["Title"]</h3>
                    <p class="text-muted mb-4">Subscription</p>

                    <form method="POST" asp-action="addSub" asp-controller="Subscription">
                       

                       
                        <div class="form-group mb-4">
                            <label asp-for="Name" class="form-label">Subscription Name</label>
                            <input type="text" asp-for="Name" class="form-control shadow-sm"  style="border-radius: 8px; border: 1px solid #ccc; padding: 10px;" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                         <div class="form-group mb-4">
                            <label asp-for="price" class="form-label">Subscription price</label>
                            <input type="text" asp-for="price" class="form-control shadow-sm"  style="border-radius: 8px; border: 1px solid #ccc; padding: 10px;" />
                            <span asp-validation-for="price" class="text-danger"></span>
                        </div>

                         <div class="form-group mb-4">
                            <label asp-for="Description" class="form-label">Subscription Description</label>
                            <input type="text" asp-for="Description" class="form-control shadow-sm"  style="border-radius: 8px; border: 1px solid #ccc; padding: 10px;" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        
                        

                        <!-- Buttons -->
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary" style="background-color: #3498db; border-radius: 50px; padding: 10px 20px; font-weight: 600;">
                                <i class="bi bi-check-circle"></i> Save
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary" style="border-radius: 50px; padding: 10px 20px;">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
