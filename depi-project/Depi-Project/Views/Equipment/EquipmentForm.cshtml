@model Depi_Project.ViewModel.EquipmentFormViewModel

@{
    ViewData["Title"] = Model.Equipment_Id > 0 ? "Edit Equipment" : "Add Equipment";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card p-4 shadow-lg rounded" style="border-radius: 12px; background-color: #f9f9f9; border: none;">
                <div class="card-body text-center">
                    <h3 class="card-title" style="font-weight: 600; color: #2c3e50;">@ViewData["Title"]</h3>
                    <p class="text-muted mb-4">Manage your gym equipment with ease</p>

                    <form method="POST" asp-action="@(Model.Equipment_Id > 0 ? "Edit" : "Create")">
                        <input type="hidden" asp-for="Equipment_Id" />

                        <!-- Equipment Name Field -->
                        <div class="form-group mb-4">
                            <label asp-for="Equipment_Name" class="form-label">Equipment Name</label>
                            <input type="text" asp-for="Equipment_Name" class="form-control shadow-sm" placeholder="e.g., Treadmill, Dumbbells" style="border-radius: 8px; border: 1px solid #ccc; padding: 10px;" />
                            <span asp-validation-for="Equipment_Name" class="text-danger"></span>
                        </div>

                        <!-- Maintenance Date Field -->
                        <div class="form-group mb-4">
                            <label asp-for="Maintainance_Date" class="form-label">Maintenance Date</label>
                            <input type="date" asp-for="Maintainance_Date" class="form-control shadow-sm" style="border-radius: 8px; border: 1px solid #ccc; padding: 10px;" />
                            <span asp-validation-for="Maintainance_Date" class="text-danger"></span>
                        </div>

                        <!-- Status Dropdown Field -->
                        <div class="form-group mb-4">
                            <label asp-for="Status" class="form-label">Status</label>
                            <select asp-for="Status" class="form-control shadow-sm" asp-items="@(new SelectList(Model.StatusOptions))" style="border-radius: 8px; border: 1px solid #ccc; padding: 10px;">
                                <option value="">-- Select Status --</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary" style="background-color: #3498db; border-radius: 50px; padding: 10px 20px; font-weight: 600;">
                                <i class="bi bi-check-circle"></i> Save
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary" style="border-radius: 50px; padding: 10px 20px;">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
